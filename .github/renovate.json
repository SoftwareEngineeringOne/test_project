{
	"extends": [
		"config:recommended",
		"group:all",
		"schedule:weekly",
		":widenPeerDependencies"
	],
	"enabledManagers": [
		"cargo",
		"github-actions",
		"bun"
	],
	"packageRules": [
		{
			"matchUpdateTypes": [
				"patch"
			],
			"enabled": false
		},
		{
			"matchManagers": [
				"cargo"
			],
			"automerge": true,
			"minimumReleaseAge": "2 days"
		},
		{
			"matchManagers": [
				"bun"
			],
			"automerge": true,
			"minimumReleaseAge": "2 days"
		}
	],
	"timezone": "Europa/Berlin",
	"dependencyDashboard": true
}
